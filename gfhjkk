local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local tool

-- 查找SyncAPI工具
for i, v in Players.LocalPlayer:GetDescendants() do
    if v.Name == "SyncAPI" then
        tool = v.Parent
        break
    end
end

if not tool then
    for i, v in game.ReplicatedStorage:GetDescendants() do
        if v.Name == "SyncAPI" then
            tool = v.Parent
            break
        end
    end
end

if not tool then
    warn("This game does not support image particle effects！")
    return
end

local remote = tool.SyncAPI.ServerEndpoint

-- 包装远程调用函数
function _(args)
    remote:InvokeServer(unpack(args))
end

-- 创建零件的函数
function CreatePart(cf, parent)
    local args = {
        [1] = "CreatePart",
        [2] = "Normal",
        [3] = cf,
        [4] = parent
    }
    _(args)
end

-- 调整零件大小的函数
function Resize(part, size, cf)
    local args = {
        [1] = "SyncResize",
        [2] = {
            [1] = {
                ["Part"] = part,
                ["CFrame"] = cf,
                ["Size"] = size
            }
        }
    }
    _(args)
end

-- 设置碰撞的函数
function SetCollision(part, boolean)
    local args = {
        [1] = "SyncCollision",
        [2] = {
            [1] = {
                ["Part"] = part,
                ["CanCollide"] = boolean
            }
        }
    }
    _(args)
end

-- 设置锚定的函数
function SetAnchor(boolean, part)
    local args = {
        [1] = "SyncAnchor",
        [2] = {
            [1] = {
                ["Part"] = part,
                ["Anchored"] = boolean
            }
        }
    }
    _(args)
end

-- 设置透明度的函数
function SetTrans(part, int)
    local args = {
        [1] = "SyncMaterial",
        [2] = {
            [1] = {
                ["Part"] = part,
                ["Transparency"] = int
            }
        }
    }
    _(args)
end

-- 创建贴花的函数
function SpawnDecal(part, side)
    local args = {
        [1] = "CreateTextures",
        [2] = {
            [1] = {
                ["Part"] = part,
                ["Face"] = side,
                ["TextureType"] = "Decal"
            }
        }
    }
    _(args)
end

-- 添加贴花的函数
function AddDecal(part, asset, side)
    local args = {
        [1] = "SyncTexture",
        [2] = {
            [1] = {
                ["Part"] = part,
                ["Face"] = side,
                ["TextureType"] = "Decal",
                ["Texture"] = "rbxassetid://".. asset
            }
        }
    }
    _(args)
end

-- 删除零件的函数
function delete(part)
    local args = {
        [1] = "Remove",
        [2] = {
            [1] = part
        }
    }
    remote:InvokeServer(unpack(args))
end

-- 存储所有活动的粒子
local activeParticles = {}

-- 为单个玩家创建粒子效果
function createParticleForPlayer(player)
    if not player.Character then return end
    
    local torso = player.Character:FindFirstChild("Torso") or player.Character:FindFirstChild("UpperTorso")
    if not torso then return end
    
    -- 在躯干周围生成粒子
    local offset = Vector3.new(
        math.random(-4, 4),  -- X轴偏移
        math.random(-3, 3),  -- Y轴偏移  
        math.random(-4, 4)   -- Z轴偏移
    )
    
    local spawnPosition = torso.CFrame * CFrame.new(offset)
    
    -- 创建零件 - 使用workspace作为父级，确保所有玩家可见
    CreatePart(spawnPosition, workspace)
    
    -- 使用更可靠的零件检测方法
    local partFound = false
    local startTime = tick()
    local maxWaitTime = 0.5 -- 最多等待0.5秒
    
    -- 循环等待直到找到零件或超时
    while tick() - startTime < maxWaitTime and not partFound do
        -- 查找新创建的零件
        for _, v in workspace:GetChildren() do
            if v:IsA("Part") and (v.Position - spawnPosition.p).Magnitude < 5 then -- 增加检测范围
                local part = v
                partFound = true
                
                -- 存储粒子引用
                table.insert(activeParticles, part)
                
                -- 立即设置零件属性
                Resize(part, Vector3.new(1.5, 1.5, 0.001), part.CFrame)
                SetCollision(part, false)
                SetTrans(part, 0.2)
                SetAnchor(true, part)
                
                -- 立即添加贴花
                SpawnDecal(part, Enum.NormalId.Front)
                AddDecal(part, "11426291165", Enum.NormalId.Front)
                
                SpawnDecal(part, Enum.NormalId.Back)
                AddDecal(part, "11426291165", Enum.NormalId.Back)
                
                -- 记录初始中心点位置，确保动画不受玩家移动影响
                local initialCenter = torso.Position
                
                -- 立即开始高速粒子动画
                spawn(function()
                    local distance = 10  -- 移动距离
                    local steps = 10     -- 步骤数
                    
                    for i = 1, steps do
                        if part and part.Parent then
                            -- 使用初始中心点计算方向，不受玩家移动影响
                            local direction = (part.Position - initialCenter).Unit
                            if direction.Magnitude == 0 then
                                direction = Vector3.new(math.random()-0.5, math.random()-0.5, math.random()-0.5).Unit
                            end
                            
                            local newCF = part.CFrame + direction * (distance / steps)
                            
                            -- 添加轻微的漂浮效果
                            newCF = newCF + Vector3.new(0, math.sin(i/2) * 0.2, 0)
                            
                            -- 缓慢淡出
                            SetTrans(part, 0.2 + (i/steps) * 0.8)
                            
                            Resize(part, part.Size, newCF)
                            wait(0.01)  -- 极短的等待时间，保持高速动画
                        end
                    end
                    
                    -- 从活动粒子表中移除
                    for i, p in ipairs(activeParticles) do
                        if p == part then
                            table.remove(activeParticles, i)
                            break
                        end
                    end
                    
                    -- 删除零件
                    if part and part.Parent then
                        delete(part)
                    end
                end)
                
                break
            end
        end
        
        if not partFound then
            wait(0.05) -- 等待50毫秒后再次尝试
        end
    end
    
    if not partFound then
        warn("Unable to find newly created part")
    end
end

-- 主粒子效果循环
local function particle()
    while true do
        -- 为所有玩家创建粒子
        for _, player in pairs(Players:GetPlayers()) do
            if player.Character and player.Character:FindFirstChild("Humanoid") and player.Character.Humanoid.Health > 0 then
                -- 为每个玩家创建1个粒子，减少生成频率
                spawn(function()
                    createParticleForPlayer(player)
                end)
            end
        end
        
        wait(0.41)  -- 增加等待时间，降低零件生成频率
    end
end

-- 当新玩家加入时
Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        -- 等待角色完全加载
        wait(1)
    end)
end)

-- 启动粒子效果
coroutine.wrap(particle)()
