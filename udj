        ServerManager.enabled = not ServerManager.enabled
        if ServerManager.enabled then
            toggleButton.BackgroundColor3 = Color3.fromRGB(220, 53, 69)
            toggleButton.Text = "⏸️ إيقاف النظام"
        else
            toggleButton.BackgroundColor3 = Color3.fromRGB(40, 167, 69)
            toggleButton.Text = "▶️ تشغيل النظام"
        end
    end)
    
    closeButton.MouseButton1Click:Connect(function()
        mainFrame.Visible = false
    end)
    
    toggleBtn.MouseButton1Click:Connect(function()
        mainFrame.Visible = not mainFrame.Visible
    end)
    
    return {
        gui = screenGui,
        mainFrame = mainFrame,
        labels = {
            fps = fpsLabel,
            memory = memoryLabel,
            players = playersLabel
        }
