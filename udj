local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- متغيرات النظام
local ServerManager = {
    enabled = false,
    performance = {
        fps = 0,
        memory = 0,
        players = 0
    },
    settings = {
        autoCleanup = true,
        performanceMonitoring = true,
        antiCheat = true
    },
    analytics = {
        totalCleanups = 0,
        memoryFreed = 0,
        cheatsDetected = 0
    }
}

