end

-- مراقبة الأداء
local function monitorPerformance()
    if not ServerManager.settings.performanceMonitoring then return end
    
    ServerManager.performance.fps = math.floor(1 / RunService.Heartbeat:Wait())
    ServerManager.performance.memory = math.floor(collectgarbage("count") / 1024)
    ServerManager.performance.players = #Players:GetPlayers()
end

-- التنظيف التلقائي للذاكرة
local function autoMemoryCleanup()
    if not ServerManager.settings.autoCleanup then return end
    
    local beforeMemory = collectgarbage("count")
    collectgarbage("collect")
    local afterMemory = collectgarbage("count")
    
    local freedMemory = beforeMemory - afterMemory
    ServerManager.analytics.memoryFreed = ServerManager.analytics.memoryFreed + freedMemory
    ServerManager.analytics.totalCleanups = ServerManager.analytics.totalCleanups + 1
end

-- نظام كشف ومنع التلاعب
local function antiCheatSystem()
    if not ServerManager.settings.antiCheat then return end
    
    for _, player in pairs(Players:GetPlayers()) do
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            local humanoid = player.Character.Humanoid
            
            -- كشف السرعة الغير طبيعية
            if humanoid.WalkSpeed > 50 then
                humanoid.WalkSpeed = 16
                ServerManager.analytics.cheatsDetected = ServerManager.analytics.cheatsDetected + 1
            end
            
            -- كشف القفز الغير طبيعي
            if humanoid.JumpPower > 100 then
                humanoid.JumpPower = 50
                ServerManager.analytics.cheatsDetected = ServerManager.analytics.cheatsDetected + 1
            end
        end
    end
end

-- حلقة النظام الرئيسية
local function mainSystemLoop()
    while true do
        if ServerManager.enabled then
            monitorPerformance()
            autoMemoryCleanup()
            antiCheatSystem()
        end
        wait(1)
    end
end

-- تحديث واجهة المستخدم
local function updateGUI(guiElements)
    while true do
        if guiElements and guiElements.labels then
            guiElements.labels.fps.Text = "FPS: " .. ServerManager.performance.fps
            guiElements.labels.memory.Text = "الذاكرة: " .. ServerManager.performance.memory .. "MB"
            guiElements.labels.players.Text = "اللاعبين: " .. ServerManager.performance.players
            
            -- تغيير ألوان التحذير
            if ServerManager.performance.fps < 30 then
                guiElements.labels.fps.TextColor3 = Color3.fromRGB(220, 53, 69)
            else
                guiElements.labels.fps.TextColor3 = Color3.fromRGB(40, 167, 69)
            end
            
            if ServerManager.performance.memory > 500 then
                guiElements.labels.memory.TextColor3 = Color3.fromRGB(220, 53, 69)
            elseif ServerManager.performance.memory > 300 then
                guiElements.labels.memory.TextColor3 = Color3.fromRGB(255, 193, 7)
            else
                guiElements.labels.memory.TextColor3 = Color3.fromRGB(40, 167, 69)
            end
        end
        wait(0.5)
    end
end

-- تهيئة النظام
local function initializeSystem()
    local mobileGUI = createMobileGUI()
    
    spawn(function()
        updateGUI(mobileGUI)
    end)
    
    spawn(function()
        mainSystemLoop()
    end)
    
    print("✅ نظام إدارة السيرفر المصغر جاهز للاستخدام!")
end

-- بدء تشغيل النظام
initializeSystem()
